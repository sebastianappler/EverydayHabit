<?xml version="1.0" encoding="utf-8" ?>
<d:BaseView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="clr-namespace:EverydayHabit.XamarinApp.Common.Views;assembly=EverydayHabit.XamarinApp"
             x:Class="EverydayHabit.XamarinApp.Features.HabitList"
             Title="Habits"
             IconImageSource="ic_list_white_48dp.xml">
            
    <AbsoluteLayout>

        <ListView x:Name="listView" 
                  ItemSelected="OnListItemSelected" 
                  RowHeight="56">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout 
                            Margin="0,0,0,0" 
                            Padding="0" 
                            Orientation="Horizontal" 
                            HorizontalOptions="FillAndExpand">
                            <Frame CornerRadius="20" Margin="8" Padding="0" HeightRequest="40" WidthRequest="40" BackgroundColor="Gray">
                                <Image Source="ic_fitness_center_white_48dp.xml" Margin="5"/>
                            </Frame>

                            <Label Text="{Binding Name}"
                                   Padding="0,12,12,16"
                                   VerticalTextAlignment="Center" 
                                   HorizontalOptions="StartAndExpand" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <ImageButton Source="ic_add_white_48dp.xml"
        Padding="10"
        BackgroundColor="#d94338"
        CornerRadius="50"
        AbsoluteLayout.LayoutFlags="PositionProportional"  
        AbsoluteLayout.LayoutBounds=".90,.95,60,60"
        Clicked="AddHabit_Clicked"
        />
    </AbsoluteLayout>
</d:BaseView>